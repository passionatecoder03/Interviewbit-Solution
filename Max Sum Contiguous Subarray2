#include <bits/stdc++.h>
#define ll long long
#define T ll t; cin>>t; while(t--)
using namespace std;
#define speed ios_base::sync_with_stdio(0)
#define endl "\n"

void fun(vector<int> a)
{
	int n=a.size();
	int d[n] , u[n],i,maxu=INT_MIN,maxd=INT_MIN,minu=INT_MAX,mind=INT_MAX;
	d[0] = a[0];
	u[0] = a[0];
	for(i=1;i<n;i++)
		d[i] = a[i]+i;
	for(i=1;i<n;i++)
		u[i] = a[i]-i;	
	for(i=0;i<n;i++)
	{
		cout<<u[i]<<" ";
	}
	cout<<endl;
	for(i=0;i<n;i++)
	{
		cout<<d[i]<<" ";
	}
	cout<<endl;
	for(i=0;i<n;i++)
	{
		if(maxu<u[i])
			maxu=u[i];
		if(minu>u[i])
			minu=u[i];
		if(maxd<d[i])
			maxd=d[i];
		if(mind>d[i])
			mind=d[i];
	}
	cout<<maxu-minu<<endl;
	cout<<maxd-mind<<endl;
}

int main()
{
	speed;
	T
	{
		ll n ,i;
		cin>>n;
		vector<int>v;
		for(i=0;i<n;i++)
		{
			int x;
			cin>>x;
			v.push_back(x);
		}
		
		fun(v);
	}
return 0;
}
